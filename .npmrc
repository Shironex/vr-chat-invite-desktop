# pnpm configuration

# Auto-install peer dependencies (no more manual --force)
auto-install-peers=true

# Strict peer dependencies checking
strict-peer-dependencies=false

# Use node_modules/.pnpm for better performance
node-linker=isolated

# IMPORTANT: Shamefully hoist for Electron/Vite compatibility
# Vite's dependency pre-bundling needs access to transitive dependencies
shamefully-hoist=true

# Enable lockfile
lockfile=true

# Save exact versions
save-exact=false
